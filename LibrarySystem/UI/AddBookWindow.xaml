<Window x:Class="LibrarySystem.UI.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Book"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="10" Width="300">
        <TextBlock Text="Title:"/>
        <TextBox x:Name="TitleBox" Margin="0,2"/>

        <TextBlock Text="Author:" Margin="0,8,0,0"/>
        <TextBox x:Name="AuthorBox" Margin="0,2"/>

        <TextBlock Text="Quantity:" Margin="0,8,0,0"/>
        <TextBox x:Name="QtyBox" Margin="0,2"/>
        
        <TextBlock Text="Genre:" Margin="0,8,0,0"/>
        <TextBox x:Name="GenreBox" Margin="0,2"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="75" Margin="0,0,5,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>